<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hc.game1">

    <application
        android:allowBackup="true"
        android:icon="@drawable/pk"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="minhasoftapp.funandlearn.CategoriesActivity"
            android:label="Categories"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>


        <activity android:name="minhasoftapp.funandlearn.Splashscreen"
            android:theme="@style/SplashTheme">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
</activity>

        <activity
            android:name="minhasoftapp.funandlearn.ThingsActivity"
            android:label="Things"
            android:screenOrientation="portrait"/>
        <activity
            android:name="minhasoftapp.funandlearn.QuizActivity"
            android:label="Quiz"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>